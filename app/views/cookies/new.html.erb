<% provide(:title, "Log in") %>

<div class="row header">
  <div class="container">
      <div class="col-md-4">
        <h1>Order Lunch</h1>
      </div>
  </div>
</div>

<div class="row">
  <div class="jumbotron">
      <div class="container">
        <div class="col-md-4 col-md-offset-8 login-pane">
            <%= form_for(:cookies, url: login_path) do |f| %>
                <h3><%= f.label :login, "FactSet Login" %></h3>
                <%= f.text_field :login, class: 'form-control' %>
                <br>
                <%= f.submit "Log in", class: "btn btn-primary" %>
            <% end %>
            <br>
            <p>Guest? <%= link_to "Guest Login", page_guest_path %></p>
        </div>
      </div>
  </div>
</div>

<div class="row footer">
  <div class="container">
    <div class="col-md-4 col-md-offset-8">
        <p>FDS Lunch Order HK 2015</p>
    </div>
  </div>
</div>