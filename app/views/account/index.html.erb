<h1>Listing Accounts</h1>

<table>
  <tr>
    <th>ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Login</th>
    <th>Location</th>
    <th>User Group</th>
    <th>Active</th>
    <th>Last Updated Time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @account.each do |acc| %>
      <tr>
        <td><%= acc.id %></td>
        <td><%= acc.first_name %></td>
        <td><%= acc.last_name %></td>
        <td><%= acc.login %></td>
        <td><%= acc.location %></td>
        <td><%= acc.user_gp %></td>
        <td><%= acc.active %></td>
        <td><%= acc.updated_at %></td>
        <td><%= link_to "Show", account_path(acc.id)%></td>
        <td><%= link_to "Edit", edit_account_path(acc.id) %></td>
        <td><%= link_to "Remove", controller: 'account', action: 'delete', id: acc.id, data: { confirm: "Are you sure?" } %></td>
      </tr>
  <% end %>
</table>

